<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>DevOps Tools</title>
  <link rel="stylesheet" href="/assets/style.css">
</head>
<body>
  <div class="container tools">
    <h1>DevOps Tools</h1>
    <div class="grid">
      <% tools.forEach(tool => { %>
        <a href="<%= tool.url %>" target="_blank" class="tool-card">
          <img src="/assets/images/<%= tool.logo %>" alt="<%= tool.name %> logo">
          <span><%= tool.name %></span>
        </a>
      <% }) %>
    </div>
    <a href="/" class="btn back">Back to Home</a>
  </div>
</body>
</html>
