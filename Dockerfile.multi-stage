
# Stage 1: Install dependencies and copy all files (logos must be present before build)
FROM node:20-alpine as builder
WORKDIR /app
COPY package*.json ./
COPY . .
RUN npm ci

# Stage 2: Production image
FROM node:20-alpine
WORKDIR /app
COPY package*.json ./
RUN npm ci --omit=dev
COPY --from=builder /app .
EXPOSE 3000
CMD ["node", "server.js"]
